{
  "dil": {
    "integrations": {
      "integration": {
        "flows": {
          "flow": {
            "id": "archive_test1",
            "name": "archive_test1",
            "type": "esb",
            "steps": {
              "step": [
                {
                  "id": "1",
                  "type": "source",
                  "uri": "https://0.0.0.0:9001/1/Archive"
                },
                {
                  "id": "2",
                  "type": "action",
                  "uri": "setbody:message:archive"
                },
                {
                  "id": "3",
                  "type": "action",
                  "uri": "zip",
                  "options": {
                    "usingIterator": "true",
                    "preservePathElements": "true"
                  }
                },
                {
                  "id": "4",
                  "type": "action",
                  "uri": "log"
                },
                {
                  "id": "5",
                  "type": "action",
                  "uri": "unzip",
                  "options": {
                    "usingIterator": "true"
                  }
                },
                {
                  "id": "6",
                  "type": "action",
                  "uri": "log"
                },
                {
                  "id": "7",
                  "type": "sink",
                  "uri": "velocity:${bodyAs(String)}"
                }
              ]
            }
          }
        }
      }
    },
    "core": {
      "messages": {
        "message": {
          "id": "archive",
          "body": "Hello"
        }
      }
    }
  }
}