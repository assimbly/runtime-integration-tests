<dil>
    <integrations>
        <integration>
            <flows>
                <flow>
                    <id>simplereplace_test1</id>
                    <name>simplereplace_test1</name>
                    <type>esb</type>
                    <steps>
                        <step>
                            <id>1</id>
                            <type>source</type>
                            <uri>https://0.0.0.0:9001/1/simplereplace</uri>
                            <links>
                                <link>
                                    <id>2</id>
                                    <transport>sync</transport>
                                    <bound>out</bound>
                                </link>
                            </links>
                        </step>
                        <step>
                            <id>2</id>
                            <type>action</type>
                            <uri>setheaders:message:names</uri>
                            <links>
                                <link>
                                    <id>2</id>
                                    <transport>sync</transport>
                                    <bound>in</bound>
                                </link>
                                <link>
                                    <id>3</id>
                                    <transport>sync</transport>
                                    <bound>out</bound>
                                </link>
                            </links>
                        </step>
                        <step>
                            <id>3</id>
                            <type>action</type>
                            <uri>setbody:hello ${header.name}, welcome to ${header.company}.
                            </uri>
                            <links>
                                <link>
                                    <id>3</id>
                                    <transport>sync</transport>
                                    <bound>in</bound>
                                </link>
                                <link>
                                    <id>4</id>
                                    <transport>sync</transport>
                                    <bound>out</bound>
                                </link>
                            </links>
                        </step>
                        <step>
                            <id>4</id>
                            <type>action</type>
                            <uri>simplereplace</uri>
                            <links>
                                <link>
                                    <id>4</id>
                                    <transport>sync</transport>
                                    <bound>in</bound>
                                </link>
                                <link>
                                    <id>5</id>
                                    <transport>sync</transport>
                                    <bound>out</bound>
                                </link>
                            </links>
                        </step>
                        <step>
                            <id>5</id>
                            <type>sink</type>
                            <uri>velocity:${bodyAs(String)}</uri>
                            <links>
                                <link>
                                    <id>5</id>
                                    <transport>sync</transport>
                                    <bound>in</bound>
                                </link>
                            </links>
                        </step>
                    </steps>
                </flow>
            </flows>
        </integration>
    </integrations>
    <core>
        <messages>
            <message>
                <id>1</id>
                <name>names</name>
                <headers>
                    <name type="header" language="simple">Pedro</name>
                    <company type="header" language="constant">Dovetail</company>
                </headers>
            </message>
        </messages>
    </core>
</dil>