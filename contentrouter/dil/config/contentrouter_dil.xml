<dil>
    <integrations>
        <integration>
            <flows>
                <flow>
                    <id>contentrouter_test1</id>
                    <name>contentrouter_test1</name>
                    <type>esb</type>
                    <steps>
                        <step>
                            <id>1</id>
                            <type>source</type>
                            <uri>https://0.0.0.0:9001/1/contentrouter</uri>
                            <links>
                                <link>
                                    <id>2</id>
                                    <transport>sync</transport>
                                    <bound>out</bound>
                                </link>
                            </links>
                        </step>
                        <step>
                            <id>2</id>
                            <type>action</type>
                            <uri>setbody:<![CDATA[<persons>
							  <person>
								<name>John Not Doe</name>
							  </person>
							  <person>
								<name>Blabla Doe</name>
							  </person>
							</persons>]]>
                            </uri>
                            <links>
                                <link>
                                    <id>2</id>
                                    <transport>sync</transport>
                                    <bound>in</bound>
                                </link>
                                <link>
                                    <id>3</id>
                                    <transport>sync</transport>
                                    <bound>out</bound>
                                </link>
                            </links>
                        </step>
                        <step>
                            <id>3</id>
                            <type>router</type>
                            <uri>content</uri>
                            <links>
                                <link>
                                    <id>3</id>
                                    <transport>sync</transport>
                                    <bound>in</bound>
                                </link>
                                <link>
                                    <id>4</id>
                                    <transport>sync</transport>
                                    <bound>out</bound>
									<rule>xpath</rule>
									<expression>/persons/person[1]/name='John Doe'</expression>
                                </link>
                                <link>
                                    <id>5</id>
                                    <transport>sync</transport>
                                    <bound>out</bound>
									<rule>simple</rule>
									<expression>${body.contains('Jane')}</expression>
                                </link>
                                <link>
                                    <id>6</id>
                                    <transport>sync</transport>
                                    <bound>out</bound>
                                </link>								
                            </links>
                        </step>
                        <step>
                            <id>4</id>
                            <type>sink</type>
                            <uri>velocity:Rule 1: ${bodyAs(String)}</uri>
                            <links>
                                <link>
                                    <id>4</id>
                                    <transport>sync</transport>
                                    <bound>in</bound>
                                </link>
                            </links>
                        </step>
						<step>
                            <id>5</id>
                            <type>sink</type>
                            <uri>velocity:Rule 2: ${bodyAs(String)}</uri>
                            <links>
                                <link>
                                    <id>5</id>
                                    <transport>sync</transport>
                                    <bound>in</bound>
                                </link>
                            </links>
                        </step>
						<step>
                            <id>6</id>
                            <type>sink</type>
                            <uri>velocity:Rule 3: ${bodyAs(String)}</uri>
                            <links>
                                <link>
                                    <id>6</id>
                                    <transport>sync</transport>
                                    <bound>in</bound>
                                </link>
                            </links>
                        </step>
                    </steps>
                </flow>
            </flows>
        </integration>
    </integrations>
</dil>