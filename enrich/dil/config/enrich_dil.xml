<dil>
    <integrations>
        <integration>
            <flows>
                <flow>
                    <id>enrich_test1</id>
                    <name>enrich_test1</name>
                    <type>esb</type>
                    <steps>
                        <step>
                            <id>1</id>
                            <type>source</type>
                            <uri>https://0.0.0.0:9001/1/enrich</uri>
                            <links>
                                <link>
                                    <id>2</id>
                                    <transport>sync</transport>
                                    <bound>out</bound>
                                </link>
                            </links>
                        </step>
                        <step>
                            <id>2</id>
                            <type>action</type>
                            <uri>setbody:<![CDATA[<persons>
							  <person>
								<name>John Doe</name>
							  </person>
							  <person>
								<name>Jane Doe</name>
							  </person>
							</persons>]]>
                            </uri>
                            <links>
                                <link>
                                    <id>2</id>
                                    <transport>sync</transport>
                                    <bound>in</bound>
                                </link>
                                <link>
                                    <id>3</id>
                                    <transport>sync</transport>
                                    <bound>out</bound>
                                </link>
                            </links>
                        </step>
                        <step>
                            <id>3</id>
                            <type>router</type>
                            <uri>enrich</uri>
                            <options>
                                <enrichType>text/xml</enrichType>
                            </options>
                            <links>
                                <link>
                                    <id>3</id>
                                    <transport>sync</transport>
                                    <bound>in</bound>
                                </link>
                                <link>
                                    <id>4</id>
                                    <transport>sync</transport>
                                    <bound>out</bound>
                                </link>
                                <link>
                                    <id>5</id>
                                    <transport>sync</transport>
                                    <bound>out</bound>
                                    <rule>sync</rule>
                                    <expression>5</expression>
                                </link>
                            </links>
                        </step>
                        <step>
                            <id>4</id>
                            <type>sink</type>
                            <uri>velocity:Message Body: ${bodyAs(String)}</uri>
                            <links>
                                <link>
                                    <id>4</id>
                                    <transport>sync</transport>
                                    <bound>in</bound>
                                </link>
                            </links>
                        </step>
                        <step>
                            <id>5</id>
                            <type>sink</type>
                            <uri>setbody:<![CDATA[<names>
								<name>John Doe</name>
								<name>Jane Doe</name>
							</names>]]>
                            </uri>
                            <links>
                                <link>
                                    <id>5</id>
                                    <transport>sync</transport>
                                    <bound>in</bound>
                                </link>
                            </links>
                        </step>
                    </steps>
                </flow>
            </flows>
        </integration>
    </integrations>
</dil>