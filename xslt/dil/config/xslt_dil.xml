<dil>
    <integrations>
        <integration>
            <flows>
                <flow>
                    <id>xmltoxslt_test1</id>
                    <name>xmltoxslt_test1</name>
                    <type>esb</type>
                    <steps>
                        <step>
                            <id>1</id>
                            <type>source</type>
                            <uri>https://0.0.0.0:9001/1/Xslt</uri>
                        </step>
                        <step>
                            <id>2</id>
                            <type>action</type>
                            <uri>setbody:<![CDATA[<persons>
							  <person>
								<name>John Doe</name>
							  </person>
							  <person>
								<name>Jane Doe</name>
							  </person>
							</persons>]]>
							</uri>
                        </step>
                        <step>
                            <id>3</id>
                            <type>action</type>
                            <uri>xslt:http://localhost:9002/1/xsltfile</uri>
                        </step>
                        <step>
                            <id>4</id>
                            <type>sink</type>
                            <uri>velocity:${bodyAs(String)}</uri>
                        </step>
                    </steps>
                </flow>
            </flows>
        </integration>
    </integrations>
