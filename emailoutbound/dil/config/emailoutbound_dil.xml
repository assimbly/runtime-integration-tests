<dil>
    <integrations>
        <integration>
            <flows>
                <flow>
                    <id>email_test1</id>
                    <name>email_test1</name>
                    <type>esb</type>
                    <steps>
                        <step>
                            <id>1</id>
                            <type>source</type>
                            <uri>https://0.0.0.0:9001/1/emailoutbound</uri>
                        </step>
                        <step>
                            <id>2</id>
                            <type>action</type>
                            <uri>setbody:Hello World</uri>
                        </step>
                        <step>
                            <id>3</id>
                            <type>action</type>
                            <uri>log</uri>
                        </step>
                        <step>
                            <id>4</id>
                            <type>action</type>
                            <uri>smtp://smtp-relay.cartoon.com:587</uri>
                            <options>
                                <from>RAW(noreply@cartoon.com)</from>
                                <headerFilterStrategy>#ExtendedHeaderFilterStrategy</headerFilterStrategy>
                                <mail.smtp.starttls.enable>true</mail.smtp.starttls.enable>
                                <password>RAW(Hoo-ha-hooah!)</password>
                                <subject>RAW(testing email component)</subject>
                                <to>RAW(johnny.bravo@cartoon.com)</to>
                                <username>RAW(noreply@cartoon.com)</username>
                            </options>
                        </step>
                        <step>
                            <id>5</id>
                            <type>sink</type>
                            <uri>velocity: email sent</uri>
                        </step>
                    </steps>
                </flow>
            </flows>
        </integration>
    </integrations>
</dil>