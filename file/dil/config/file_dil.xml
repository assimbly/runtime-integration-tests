<dil>
    <integrations>
        <integration>
            <flows>
                <flow>
                    <id>file_test1</id>
                    <name>file_test1</name>
                    <type>esb</type>
                    <steps>
                        <step>
                            <id>1</id>
                            <type>source</type>
                            <uri>https://0.0.0.0:9001/1/file</uri>
                            <links>
                                <link>
                                    <id>2</id>
                                    <transport>sync</transport>
                                    <bound>out</bound>
                                </link>
                            </links>
                        </step>
                        <step>
                            <id>2</id>
                            <type>action</type>
                            <uri>setbody:<![CDATA[<persons>
							  <person>
								<name>John Doe</name>
							  </person>
							  <person>
								<name>Jane Doe</name>
							  </person>
							</persons>]]>
                            </uri>
                            <links>
                                <link>
                                    <id>2</id>
                                    <transport>sync</transport>
                                    <bound>in</bound>
                                </link>
                                <link>
                                    <id>22</id>
                                    <transport>sync</transport>
                                    <bound>out</bound>
                                </link>
                            </links>
                        </step>
                        <step>
                            <id>22</id>
                            <type>action</type>
                            <uri>setheaders:message:home</uri>
                            <links>
                                <link>
                                    <id>22</id>
                                    <transport>sync</transport>
                                    <bound>in</bound>
                                </link>
                                <link>
                                    <id>3</id>
                                    <transport>sync</transport>
                                    <bound>out</bound>
                                </link>
                            </links>
                        </step>
                        <step>
                            <id>3</id>
                            <type>action</type>
                            <uri>file:${header.home}</uri>
                            <links>
                                <link>
                                    <id>3</id>
                                    <transport>sync</transport>
                                    <bound>in</bound>
                                </link>
                                <link>
                                    <id>4</id>
                                    <transport>sync</transport>
                                    <bound>out</bound>
                                </link>
                            </links>
                        </step>
                        <step>
                            <id>4</id>
                            <type>sink</type>
                            <uri>velocity:Message Body: ${bodyAs(String)}</uri>
                            <links>
                                <link>
                                    <id>4</id>
                                    <transport>sync</transport>
                                    <bound>in</bound>
                                </link>
                            </links>
                        </step>
                    </steps>
                </flow>
            </flows>
        </integration>
    </integrations>
    <core>
        <messages>
            <message>
                <id>1</id>
                <name>home</name>
                <headers>
                    <home type="header" language="groovy">System.getProperty("user.home")</home>
                </headers>
            </message>
        </messages>
    </core>
</dil>