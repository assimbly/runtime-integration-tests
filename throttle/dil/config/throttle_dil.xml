<dil>
    <integrations>
        <integration>
            <flows>
                <flow>
                    <id>throttle_test1</id>
                    <name>throttle_test1</name>
                    <type>esb</type>
                    <steps>
                        <step>
                            <id>1</id>
                            <type>source</type>
                            <uri>https://0.0.0.0:9001/1/throttle</uri>
                        </step>
                        <step>
                            <id>2</id>
                            <type>action</type>
                            <uri>setbody:<![CDATA[<persons>
							  <person>
								<name>John Doe</name>
							  </person>
							  <person>
								<name>Jane Doe</name>
							  </person>
							</persons>]]>
                            </uri>
                        </step>
                        <step>
                            <id>3</id>
                            <type>action</type>
                            <uri>log</uri>
                            <links>
                                <link>
                                    <id>4</id>
                                    <transport>sync</transport>
                                    <bound>out</bound>
                                </link>
                            </links>
                        </step>
                        <step>
                            <id>4</id>
                            <type>router</type>
                            <uri>split</uri>
                            <links>
                                <link>
                                    <id>4</id>
                                    <transport>sync</transport>
                                    <bound>in</bound>
                                </link>
                                <link>
                                    <id>5</id>
                                    <transport>sync</transport>
                                    <bound>out</bound>
                                    <rule>xpath</rule>
                                    <expression>/persons/person</expression>
                                </link>
                                <link>
                                    <id>8</id>
                                    <transport>sync</transport>
                                    <bound>out</bound>
                                </link>
                            </links>
                        </step>
                        <step>
                            <id>5</id>
                            <type>action</type>
							<uri>throttle</uri>
							<options>
								<timeperiod>5000</timeperiod>
                                <messages>1</messages>
							</options>
                            <links>
                                <link>
                                    <id>5</id>
                                    <transport>sync</transport>
                                    <bound>in</bound>
                                </link>
                            </links>
                        </step>
                        <step>
                            <id>6</id>
                            <type>action</type>
                            <uri>log</uri>
                        </step>
                        <step>
                            <id>7</id>
                            <type>sink</type>
                            <uri>print:Message Body: ${bodyAs(String)}</uri>
                        </step>
                        <step>
                            <id>8</id>
                            <type>sink</type>
                            <uri>print:Default output</uri>
                            <links>
                                <link>
                                    <id>8</id>
                                    <transport>sync</transport>
                                    <bound>in</bound>
                                </link>
                            </links>
                        </step>
                    </steps>
                </flow>
            </flows>
        </integration>
    </integrations>
</dil>