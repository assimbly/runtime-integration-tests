<dil>
    <integrations>
        <integration>
            <flows>
                <flow>
                    <id>pdf_test1</id>
                    <name>pdf_test1</name>
                    <type>esb</type>
                    <steps>
                        <step>
                            <id>1</id>
                            <type>source</type>
                            <uri>https://0.0.0.0:9001/1/pdf</uri>
                            <links>
                                <link>
                                    <id>2</id>
                                    <transport>sync</transport>
                                    <bound>out</bound>
                                </link>
                            </links>
                        </step>
                        <step>
                            <id>2</id>
                            <type>action</type>
                            <uri>setheaders:message:address</uri>
                            <links>
                                <link>
                                    <id>2</id>
                                    <transport>sync</transport>
                                    <bound>in</bound>
                                </link>
                                <link>
                                    <id>3</id>
                                    <transport>sync</transport>
                                    <bound>out</bound>
                                </link>
                            </links>
                        </step>
                        <step>
                            <id>3</id>
                            <type>action</type>
                            <uri>pdf:http://localhost:9002/1/pdfs/flowid</uri>
                            <options>
                                <tenant>RAW(tenant)</tenant>
                                <uuid>RAW(12345)</uuid>
                            </options>
                            <links>
                                <link>
                                    <id>3</id>
                                    <transport>sync</transport>
                                    <bound>in</bound>
                                </link>
                                <link>
                                    <id>4</id>
                                    <transport>sync</transport>
                                    <bound>out</bound>
                                </link>
                            </links>
                        </step>
                        <step>
                            <id>4</id>
                            <type>sink</type>
                            <uri>file:C:/data/pdf</uri>
							<options>
								<fileName>result.pdf</fileName>
							</options>
                            <links>
                                <link>
                                    <id>4</id>
                                    <transport>sync</transport>
                                    <bound>in</bound>
                                </link>
                            </links>
                        </step>
                    </steps>
                </flow>
            </flows>
        </integration>
    </integrations>
    <core>
        <messages>
            <message>
                <id>1</id>
                <name>address</name>
                <headers>
                    <name type="header" language="constant">Pedro Catalao</name>
                    <address type="header" language="constant">Main street 1</address>
                    <zip type="header" language="constant">10000, Alcochete</zip>
                </headers>
            </message>
        </messages>
    </core>
</dil>